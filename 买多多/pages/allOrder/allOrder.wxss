
.swiper-tab {
  background: white;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx ;
  font-size: 30rpx;
  color: #7c7979;
  flex-direction: row;
  border-bottom: 1rpx solid #d3d3d3;
  border-top: 1rpx solid #f0f0f0;

}

.tab-item {
  width: 18%;
  text-align: center;
  padding-bottom: 8rpx;
  box-sizing: border-box;
  border-bottom: 4rpx solid transparent;
  }

.swiper {
 height: 3000rpx;
 
}

.on {
  color: black;
  border-bottom: 4rpx solid rgb(243, 67, 67);
}









.container {
  padding-top: 30rpx;
}

.shop {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.shop>image {
  width: 60rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.goods {
  display: flex;
  align-items: center;
  background: #f6f6f6;
  /* margin-bottom: 20rpx; */
  padding: 40rpx 20rpx;
}

.goods>image {
  border: 1rpx solid #d8d6d6;
  width: 460rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.price {
  display: flex;
  justify-content: space-between;
}

.express {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
}

.good_name {
  font-size: 28rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}

.good_norm {
  color: #868383;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.goods_change {
  font-size: 20rpx;
  color: red;
  border: 1rpx solid red;
  border-radius: 6rpx;
  padding: 0 10rpx;
  width: 90rpx;
  text-align: center;
}

.money {
  font-size: 24rpx;
  color: red;
}

.price1 {
  font-size: 32rpx;
  color: red;
}

.good_num {
  font-size: 30rpx;
}

.inpunt_place {
  font-size: 26rpx;
}

.express1 {
  display: flex;
  font-size: 30rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.express1>input {
  margin-left: 20rpx;
  width: 70%;
}
.space_view {
  width: 100%;
  height: 20rpx;
  background: #e4e3e3;
}
.cance{
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.cance>view{
  float: right;
}
.cance>view>text{
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  margin-left: 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid #cdcdcd;
}
.no_order{
  background: #f0f0f0;
  text-align: center;
  height: 1500rpx;
}

.no_order>image{
  margin-top: 200rpx;
  width: 200rpx;
}
.font1{
  letter-spacing: 2rpx;
  margin-top: 40rpx;
  color: rgb(44, 43, 43);
  font-size: 30rpx;
   text-align: center;

}
.font2{
   font-size: 24rpx;
   color: #999;
   margin-top: 20rpx;
    text-align: center;
  
}