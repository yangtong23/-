/* 推荐商品 */
.groomGoods{
  display: flex;
  flex-wrap: wrap;

}
.groom_view{
  width: 50%;
  box-sizing: border-box;
  border: 1px solid #f1f1f1;
  border-collapse: collapse;
}
.groomImg{
  width: 100%;
}
.font8{
  overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
font-size: 24rpx;
color: #444242;
}
.font9{
  padding: 10rpx 0; 
  color: #f23030;
  font-size: 30rpx;
}
.font9>text{
  font-size: 26rpx;
}
.goodName{
  padding:  0 8rpx 20rpx;
}
.font10{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.font10>view:first-child{
    font-size: 20rpx;
    color: #9b9a9a;
}
.font10>view:last-child{
   font-size: 22rpx;
   color: #5e5c5c;
   border: 1px solid #cdcdcd;
   padding: 0 6rpx;
   border-radius: 6rpx;
}

.good_item{
  display: flex;
  align-items: center;
}
.good_item>image{
  width: 240rpx;
  border:1rpx solid #f0f0f0;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.goods_name{
 overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
