.order_top {
  border-top: 1rpx solid #cac9c9;
  background: #f3f3f3;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: rgb(29, 28, 28);
}

.order_top_1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  padding: 0 60rpx;
  font-size: 32rpx;
  color: rgb(32, 31, 31);
}

.order_top_2 {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: rgb(65, 63, 63);
}

.order_top_2>image {
  width: 40rpx;
  margin-right: 20rpx;
}

.address {
  border-top: 1rpx solid #cac9c9;
  background: #f3f3f3;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: rgb(29, 28, 28);
}

.address>image {
  width: 30rpx;
  vertical-align: middle;
}

.space_view {
  width: 100%;
  height: 20rpx;
  background: #e4e3e3;
}

.container {
  padding-top: 30rpx;
}

.shop {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.shop>image {
  width: 60rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.goods {
  display: flex;
  align-items: center;
  background: #f6f6f6;
  /* margin-bottom: 20rpx; */
  padding: 40rpx 20rpx;
}

.goods>image {
  border: 1rpx solid #d8d6d6;
  width: 460rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.price {
  display: flex;
  justify-content: space-between;
}

.express {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
}

.good_name {
  font-size: 28rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}

.good_norm {
  color: #868383;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.goods_change {
  font-size: 20rpx;
  color: red;
  border: 1rpx solid red;
  border-radius: 6rpx;
  padding: 0 10rpx;
  width: 90rpx;
  text-align: center;
}

.money {
  font-size: 24rpx;
  color: red;
}

.price1 {
  font-size: 32rpx;
  color: red;
}

.good_num {
  font-size: 30rpx;
}

.inpunt_place {
  font-size: 26rpx;
}

.express1 {
  display: flex;
  font-size: 30rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.express1>input {
  margin-left: 20rpx;
  width: 70%;
}

.balance {
  position: fixed;
  width: 100%;
  bottom: 0;
  /* height: 100rpx; */
  overflow: hidden;
  background: white;
}

.balance>view {
  float: right;
}

.balance text {
  vertical-align: middle;
}

.total {
  font-size: 30rpx;
}

.apply {
  display: inline-block;
  padding: 20rpx 40rpx;
  text-align: center;
  background: rgb(247, 45, 45);
  color: white;
  font-size: 32rpx;
  margin-left: 30rpx;
}

/* 密码 */

.btn_pay {
  margin: 100rpx auto;
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  background-color: #d3a95a;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
}

/* 支付密码css start */

.bg_layer {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9998;
}

.input_main {
  position: fixed;
  left: 0;
  bottom: 500rpx;
  width: 100%;
  height: 394rpx;
  background-color: #fff;
  z-index: 9999;
}

.input_title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.input_back {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input_back text {
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 1rpx solid #aaa;
  border-width: 5rpx 0 0 5rpx;
  transform: rotate(-45deg);
}

.input_tip {
  margin: 30rpx;
  font-size: 24rpx;
  color: #888;
}

/* 密码掩码模拟 */

.input_row {
  width: 690rpx;
  margin: 0 auto;
  height: 98rpx;
  position: relative;
  display: flex;
  align-items: center;
  border: 1rpx solid #e2e2e2;
  border-radius: 20rpx;
}

.input_row .pwd_item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  border-right: 1rpx solid #e2e2e2;
  position: relative;
}

.pwd_item:nth-last-of-type(1) {
  border-right: 0;
}

.pwd_item text {
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #555;
}

.forget_pwd {
  float: right;
  margin: 30rpx;
  width: 100rpx;
  text-align: right;
  font-size: 24rpx;
  color: #ff7800;
}

/* 文本输入框位置: 设置到左边隐藏 */

.input_control {
  position: relative;
  left: -300rpx;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;
}
