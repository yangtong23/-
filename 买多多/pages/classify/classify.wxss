page{
  height:100%;
}
.body_{
  height: 100%;
}

.top{
  /* height: 10%; */
  background: white;
  border-top:1px solid  #e7e6e6; 
  border-bottom:1px solid  #e7e6e6; 
  padding: 12rpx 0 ;
}
.top>view{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  background: #ecedee;
  border-radius:40rpx;
  text-align: center;
  font-size: 26rpx;
  color: rgb(126, 125, 125); 
  margin: 0 auto;
}

.search{
  width: 30rpx;
  vertical-align: middle;
}
.container{
  /* display: flex; */
  position: relative;
  width: 100%;  
  height: 92.1%;  
}
.left_box{
  left: 0;
  top: 0;
  width: 30%;
  height: 100%;  
  position: absolute;
   color: #939393; 
  background: #f4f4f4;
  text-align: center;
  font-size: 28rpx;
}
.leftImg{
  width: 40%;
}
.right_box{
  
  height:100%;
  position: absolute;
  right: 0;
  top: 0;
  width: 70%;
background: white;
  font-size: 20rpx;
}
.list_goods{
  padding: 24rpx 0;
}
.active{
  background: #fff;  
  color: #f0145a; 
}
.right_goods{
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}
.good_img{
  width: 100%;
}
.right_text{
  width: 60%;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #f6f6f6;
  padding-bottom: 20rpx;
}
.font1{
   display: -webkit-box;
    font-size:26rpx;
    color:#000000;
    line-height: 36rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
    margin-bottom: 20rpx;
    
}
.font2{
  color: red;
}
.font3{
   color: red;
   font-size: 26rpx;
   margin-bottom: 10rpx;

}
.font4{
     color: #eb5211;
     border: 1rpx solid #eb5211;
     border-radius: 4rpx;
     padding: 0 6rpx;
     margin-right: 12rpx;
}
.font5{
  color: #adadad;
}
.font6{
  margin-bottom: 14rpx;
}

.loadMore{
  position: absolute;
  top: 40%;
  right: 20%;
}
