  padding: 10rpx 0; 
  color: #f23030;
  font-size: 30rpx;
}
.font9>text{
  font-size: 26rpx;
}
.goodName{
  padding:  0 8rpx 20rpx;
}

.aplly{
  color: rgb(88, 84, 84);
  font-size: 20rpx;
  margin-left: 20rpx;
}

.image_list{
  position: relative;                                                                  
display: flex;
flex-direction: column;
}
